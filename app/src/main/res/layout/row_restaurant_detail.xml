<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                                android:id="@+id/headerImageRow"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_launcher_background" />

                        <TextView
                                android:id="@+id/nameRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="15sp"
                                android:layout_marginBottom="5dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/addressRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/cityRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/stateRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/areaRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/postalCodeRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/countryRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/phoneRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/priceRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />

                        <TextView
                                android:id="@+id/reserveRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary" />
                </LinearLayout>
        </ScrollView>

</LinearLayout>